
<form class="o-container o-container--xsmall c-card u-high login-form">
<header class="c-card__header">
  <h2 class="c-heading">
    Welcome to the Vacationator!
    <div class="c-heading__sub">Create new user</div>
  </h2>
</header>
  <div class="c-card__body">
    <div class="o-form-element">
      <label class="c-label">
        Username:
        <input class="c-field c-field--label " type="username" placeholder="example" id="name-signup"/>
        <div role="tooltip" class="c-hint">
          The username for the account
        </div>
      </label>
    </div>
    <div class="o-form-element">
      <label class="c-label">
        Email:
        <input class="c-field c-field--label " type="email" placeholder="your@email.com" id="email-signup"/>
        <div role="tooltip" class="c-hint">
          The email used to register the account
        </div>
      </label>
    </div>
    <label class="o-form-element c-label">
      Password:
      <input class="c-field c-field--label" type="password" id="password-signup"/>
    </label>
    <div class="o-form-element">
      <label class="c-toggle c-toggle--success">
        Is this user an Admin?
        <input type="checkbox" id="is-admin">
        <div class="c-toggle__track">
          <div class="c-toggle__handle"></div>
        </div>
      </label>
    </div>
  </div>
  <footer class="c-card__footer">
    <button type="button" class="c-button c-button--brand c-button--block signupbutton">
      Create New User
    </button>
  </footer>
</form>

<script src="./javascript/signup.js"></script>